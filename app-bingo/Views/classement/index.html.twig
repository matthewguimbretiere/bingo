{% extends '/classement/layout.html.twig' %}
{% block title %}Classement{% endblock %}
{% block content %}
<div id="container">
    <a href="{{ url('/classement/add') }}" class="btn btn-primary mt-5">Ajouter un joueur</a>
    <table class="table table-striped table-dark mt-5">
        <thead>
            <tr>
                <th scope="col">Pseudo</th>
                <th scope="col">Points</th>
                <th scope="col">Kills</th>
                <th scope="col">Total</th>
                <th scope="col" style="width:10vw">Options</th>
            </tr>
        </thead>
        <tbody>
            {% for joueur in infosJoueurs %}
                <tr>
                    <th scope="row">{{ joueur.pseudo }}</th>
                    <td>{{ joueur.points }}</td>
                    <td>{{ joueur.kills }}</td>
                    <td>{{ joueur.total }}</td>
                    <td class="d-flex flex-row justify-content-around align-items-center">
                        <a href="{{ url('/classement/edit/') ~ joueur.id }}" class="btn btn-outline-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{ url('/classement/delete/') ~ joueur.id }}" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
